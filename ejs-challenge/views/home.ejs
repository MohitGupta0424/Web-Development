<%- include('partials/header') -%>

<h1>Home</h1>
<p><%= homedata %></p>

<%for(var i =0; i<dataObject.length; i++){%>
        <h1><%= dataObject[i].postTitle %></h1>
        <p><%= dataObject[i].postTruncData %>
          <%if(dataObject[i].postBody.length> dataObject[i].postTruncData.length){%>
            <a href=<%= dataObject[i].url %>>Read more</a>
          <%}%>
          </p>
    <%}%>

  <form action="/compose" method="GET">
    <div>
      <button class="btn btn-dark compose" type="submit" name="button">Compose Posts</button>
    </div>
  </form>

<%- include('partials/footer') -%>
